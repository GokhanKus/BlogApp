@model RegisterViewModel

<div class="row">
	<div class="bg-white p-4">

		<h1>Kayıt Ol</h1>
		<form asp-action="Register" method="post" novalidate>@*novalide diyerek eposta icin validasyonu html5 sagliyordu bunu backende (asp.nete) bırakmıs oluyoruz, hata kontrolunu biz yapiyoruz.*@

			<div asp-validation-summary="All" class="text-danger"></div>

			<div class="mb-3 form-floating">
				<input asp-for="Email" class="form-control" placeholder="Email" />
				<label asp-for="Email"></label>
			</div>

			<div class="mb-3 form-floating">
				<input asp-for="UserName" class="form-control" placeholder="UserName" />
				<label asp-for="UserName"></label>
			</div>

			<div class="mb-3 form-floating">
				<input asp-for="Name" class="form-control" placeholder="Name" />
				<label asp-for="Name"></label>
			</div>

			<div class="mb-3 form-floating">
				<input asp-for="Password" class="form-control" placeholder="Password" />
				<label asp-for="Password"></label>
			</div>

			<div class="mb-3 form-floating">
				<input asp-for="ConfirmPassword" class="form-control" placeholder="ConfirmPassword" />
				<label asp-for="ConfirmPassword"></label>
			</div>

			<button type="submit" class="btn btn-primary">Register</button>

		</form>
	</div>
</div>